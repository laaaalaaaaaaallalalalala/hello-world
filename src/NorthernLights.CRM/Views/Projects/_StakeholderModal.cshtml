<div class="modal fade" id="modalStakeholder" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formStakeholder" class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h2>Stakeholder</h2>
                </div>
                <div class="modal-body">
                    @Html.Hidden("Id")
                    @Html.Hidden("ProjectId", (int)ViewBag.Id)
                    <div class="form-group">
                        @Html.Label("ContactId", "Contact", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownList("ContactId", new List<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Role", "Role", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownList("Role", null, "- Select -", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("BeginDate", "Join Date", new { @class = "col-md-3 control-label" })
                        <div class="col-md-4" style="z-index: 1030;">
                            <div class="input-group date">
                                @Html.TextBox("BeginDate", "", new { @class = "form-control" })
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("EndDate", "Leave Date", new { @class = "col-md-3 control-label" })
                        <div class="col-md-4" style="z-index: 1030;">
                            <div class="input-group date">
                                @Html.TextBox("EndDate", "", new { @class = "form-control" })
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Comment", "Comment", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextArea("Comment", "", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->