<div class="modal fade" id="modalLabor" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formLabor" class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h2>Labor</h2>
                </div>
                <div class="modal-body">
                    @Html.Hidden("CostId")
                    <div class="form-group">
                        @Html.Label("EmployeeId", "Employee", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownList("EmployeeId", new List<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("ProjectId", "Project", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownList("ProjectId", new List<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Alias", "Alias", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBox("Alias", "", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("ResourceType", "Type", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownList("ResourceType", null, "- Select -", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("ActualHours", "Actual Hours", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBox("ActualHours", "", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("ActualCost", "Actual Cost", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            <div class="input-group">
                                <div class="input-group-addon">$</div>
                                @Html.TextBox("ActualCost", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Comment", "Comment", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextArea("Comment", "", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->