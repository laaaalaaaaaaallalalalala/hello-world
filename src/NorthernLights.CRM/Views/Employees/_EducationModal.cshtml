<div class="modal fade" id="modalEducation" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formEducation" class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h2>Education</h2>
                </div>
                <div class="modal-body">
                    @Html.Hidden("EducationId")
                    <div class="form-group">
                        @Html.Label("School", "School", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBox("School", "", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("BeginDate", "Start Date", new { @class = "col-md-3 control-label" })
                        <div class="col-md-4" style="z-index: 1030;">
                            <div class="input-group date">
                                @Html.TextBox("BeginDate", "", new { @class = "form-control" })
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("EndDate", "End Date", new { @class = "col-md-3 control-label" })
                        <div class="col-md-4" style="z-index: 1030;">
                            <div class="input-group date">
                                @Html.TextBox("EndDate", "", new { @class = "form-control" })
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Degree", "Degree", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownList("Degree", null, "- Select -", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Major", "Field of Study", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBox("Major", "", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Certifications", "Certifications", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextArea("Certifications", "", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->